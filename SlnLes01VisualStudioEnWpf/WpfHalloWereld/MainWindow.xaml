<Window x:Class="WpfHalloWereld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHalloWereld"
        mc:Ignorable="d"
        Title="WPF Hallo" Height="450" Width="800" Background="#FFFFFFDE">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblMessage" Content="Hallo! Hoe is je naam? " HorizontalAlignment="Left" Height="25" Margin="35,30,0,0" VerticalAlignment="Top" Width="129"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="25" Margin="40,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="btnOK" Padding="5" Content="OK" HorizontalAlignment="Left" Margin="40,115,0,0" VerticalAlignment="Top" Click="BtnOK_Click"/>

    </Grid>
</Window>
